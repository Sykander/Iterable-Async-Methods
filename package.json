{
  "name": "iterable-async",
  "version": "1.1.0",
  "description": "Async Array Class and methods. Use for asynchronous array looping methods.",
  "main": "src/index.js",
  "types": "types/index.d.ts",
  "scripts": {
    "docs:generate": "jsdoc -c jsdoc.json -d docs/ -t ./node_modules/ink-docstrap/template -R README.md src",
    "docs:show": "npx http-server docs",
    "test:type-definitions": "tsc",
    "test:code-style": "npm run lint:check",
    "test:unit-tests-report": "mocha -R JSON -O test/**/*.spec.js | tee reports/unit-tests-summary.json",
    "test:unit-tests": "mocha test/**/*.spec.js",
    "test:coverage": "nyc npm run test:unit-tests-report",
    "test": "npm run test:unit-tests && npm run test:code-style && npm run test:type-definitions && npm run test:coverage",
    "lint:fix": "eslint --fix src test && prettier --write 'src/**/*.{js,ts,css,html}' --write 'test/**/*.{js,ts,css,html}'",
    "lint:check": "eslint src test",
    "lint:report": "eslint --output-file reports/lint-summary.json --format json src test",
    "lint": "npm run lint:fix && npm run lint:check && npm run lint:report",
    "prepublishOnly": "npm ci && npm run lint && npm test",
    "posttest": "echo \"No issues.\"",
    "postlint": "echo \"No issues.\""
  },
  "author": {
    "name": "Sykander Gul",
    "email": "scanda@live.co.uk"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Sykander/iterable-async.git"
  },
  "license": "MIT",
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-jsdoc": "^30.7.9",
    "eslint-plugin-prettier": "^3.3.0",
    "faker": "^4.1.0",
    "husky": "^3.1.0",
    "ink-docstrap": "^1.3.2",
    "jsdoc": "^3.6.6",
    "mocha": "^8.2.1",
    "nyc": "^15.1.0",
    "prettier": "^1.19.1",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test:code-style"
    }
  },
  "keywords": [
    "promise",
    "iterable",
    "async",
    "array",
    "methods"
  ],
  "runkitExampleFilename": "playground/index.js"
}
